<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="JavaEE.dao.UserMapper">


    <insert id="addUser" parameterType="JavaEE.domain.User"
        useGeneratedKeys="true" keyProperty="user_id">
        insert into tb_user(username,email_addr,password,salt) values (#{username},#{email_addr},#{password},#{salt})
    </insert>

    <select id="findUser" resultType="JavaEE.domain.User" >
        select * from tb_user where email_addr=#{email_addr}
    </select>

    <select id="findAll" resultType="JavaEE.domain.User" >
        select * from tb_user
    </select>

    <select id="getUserByEmailAddr" resultType="JavaEE.domain.User">
        select * from tb_user where email_addr=#{emailAddr}
    </select>
</mapper>
